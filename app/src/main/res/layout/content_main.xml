<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.Activity_Main"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data"
                android:textAlignment="center"
                android:textSize="18sp" />

            <android.support.v7.widget.GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:columnCount="4"
                app:orientation="vertical"
                app:rowCount="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    app:layout_row="0">

                    <Button
                        android:id="@+id/button_data_academic"
                        android:layout_width="@dimen/main_button_width"
                        android:layout_height="@dimen/main_button_height"
                        android:text="Academic"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/button_data_physical"
                        android:layout_width="@dimen/main_button_width"
                        android:layout_height="@dimen/main_button_height"
                        android:text="Physical Activity"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/button_data_social"
                        android:layout_width="@dimen/main_button_width"
                        android:layout_height="@dimen/main_button_height"
                        android:text="Social"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/button_data_diet"
                        android:layout_width="@dimen/main_button_width"
                        android:layout_height="@dimen/main_button_height"
                        android:text="Diet"
                        android:textAllCaps="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    app:layout_row="1">

                    <Button
                        android:id="@+id/button_data_sleep"
                        android:layout_width="@dimen/main_button_width"
                        android:layout_height="@dimen/main_button_height"
                        android:text="Sleep"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/button_data_mood"
                        android:layout_width="@dimen/main_button_width"
                        android:layout_height="@dimen/main_button_height"
                        android:text="Mood"
                        android:textAllCaps="false" />

                    <Button
                        android:layout_width="@dimen/main_button_width"
                        android:layout_height="@dimen/main_button_height"
                        android:textAllCaps="false" />

                    <Button
                        android:layout_width="@dimen/main_button_width"
                        android:layout_height="@dimen/main_button_height"
                        android:textAllCaps="false" />

                </LinearLayout>

            </android.support.v7.widget.GridLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Applets"
                android:textAlignment="center"
                android:textSize="18sp" />

            <android.support.v7.widget.GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:columnCount="4"
                app:orientation="vertical"
                app:rowCount="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    app:layout_row="0">

                    <Button
                        android:id="@+id/button_applet_calendar"
                        android:layout_width="@dimen/main_button_width"
                        android:layout_height="@dimen/main_button_height"
                        android:text="Calendar"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/button_applet_academic"
                        android:layout_width="@dimen/main_button_width"
                        android:layout_height="@dimen/main_button_height"
                        android:text="Academic"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/button_applet_physical"
                        android:layout_width="@dimen/main_button_width"
                        android:layout_height="@dimen/main_button_height"
                        android:layout_weight="1"
                        android:text="Physical Activity Scheduler"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/button_applet_social"
                        android:layout_width="@dimen/main_button_width"
                        android:layout_height="@dimen/main_button_height"
                        android:layout_weight="1"
                        android:text="Social Scheduler"
                        android:textAllCaps="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    app:layout_row="1">

                    <Button
                        android:id="@+id/button_applet_diet"
                        android:layout_width="@dimen/main_button_width"
                        android:layout_height="@dimen/main_button_height"
                        android:layout_weight="1"
                        android:text="Diet Recorder"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/button_applet_sleep"
                        android:layout_width="@dimen/main_button_width"
                        android:layout_height="@dimen/main_button_height"
                        android:layout_weight="1"
                        android:text="Sleep Recorder"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/button_applet_mood"
                        android:layout_width="@dimen/main_button_width"
                        android:layout_height="@dimen/main_button_height"
                        android:layout_weight="1"
                        android:text="Mood Recorder"
                        android:textAllCaps="false" />

                    <Button
                        android:layout_width="@dimen/main_button_width"
                        android:layout_height="@dimen/main_button_height"
                        android:layout_weight="1"
                        android:textAllCaps="false" />

                </LinearLayout>

            </android.support.v7.widget.GridLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>