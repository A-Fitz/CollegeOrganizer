<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textview_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textview_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Professor"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textview_professor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textview_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textview_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Time"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textview_starttime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Time"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textview_endtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp" />

        <TextView
            android:id="@+id/label_repeatsevery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repeats Every"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textview_repeatsevery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp" />

        <TextView
            android:id="@+id/label_repeatuntil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repeats Until"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textview_repeatuntil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp" />

    </LinearLayout>
</FrameLayout>