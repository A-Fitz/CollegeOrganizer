<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Fragment_AddPhysicalActivity">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textinput_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/add_physical_activity_textinput_height"
                android:hint="Name" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textinput_details"
                android:layout_width="match_parent"
                android:layout_height="@dimen/add_physical_activity_textinput_height"
                android:hint="Details" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/add_physical_activity_textinput_height"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="Start Time"
                android:textAlignment="textStart"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/textinput_starttime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:clickable="true"
                android:editable="false"
                android:focusableInTouchMode="false" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/add_physical_activity_textinput_height"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="End Time"
                android:textAlignment="textStart"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/textinput_endtime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:clickable="true"
                android:editable="false"
                android:focusableInTouchMode="false" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/add_physical_activity_textinput_height"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="Date"
                android:textAlignment="textStart"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:clickable="true"
                android:editable="false"
                android:focusableInTouchMode="false" />
        </LinearLayout>

        <Spinner
            android:id="@+id/activity_intensity_dropdown"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="@dimen/add_physical_activity_textinput_height" />


        <Button
            android:id="@+id/color_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Color"
            android:textAllCaps="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_delete"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_close" />

            <ImageButton
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_check" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/add_physical_activity_textinput_height"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/repeats_checkbox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:text="Repeats?" />

            <EditText
                android:id="@+id/repeatUntilDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:clickable="true"
                android:editable="false"
                android:enabled="false"
                android:hint="End Date" />

        </LinearLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="@dimen/add_physical_activity_textinput_height"
            android:layout_weight="1"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/radio_sunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:singleLine="true"
                android:text="S" />

            <CheckBox
                android:id="@+id/radio_monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:singleLine="true"
                android:text="M" />

            <CheckBox
                android:id="@+id/radio_tuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:singleLine="true"
                android:text="T" />

            <CheckBox
                android:id="@+id/radio_wednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:singleLine="true"
                android:text="W" />

            <CheckBox
                android:id="@+id/radio_thursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:singleLine="true"
                android:text="T" />

            <CheckBox
                android:id="@+id/radio_friday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:singleLine="true"
                android:text="F" />

            <CheckBox
                android:id="@+id/radio_saturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:singleLine="true"
                android:text="S" />
        </RadioGroup>

    </LinearLayout>

</FrameLayout>